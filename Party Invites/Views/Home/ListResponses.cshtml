@model IEnumerable<Party_Invites.Models.GuestResponse>

@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Responses</title>
	<link rel="stylesheet" href="~/lib/bootstrap-3.4.1-dist/css/bootstrap.css" />
	<style>
		.table {
			width: 75%;
			max-width: 100%;
			margin-bottom: 20px;
			position: absolute;
			top: 10%;
			left: 50%;
			transform: translate(-50%, 50%);
		}
	</style>
</head>
<body>
	<div class="panel-body">
		<h2 style="text-align: center">Here is the list of people attending the party</h2>
		<table class="table table-sm table-striped table-bordered">
			<thead>
				<tr>
					<th>Name</th>
					<th>Email</th>
					<th>Phone</th>
				</tr>
			</thead>
			<tbody>
				@foreach (Party_Invites.Models.GuestResponse response in Model)
				{
					<tr>
						<td>@response.Name</td>
						<td>@response.Email</td>
						<td>@response.Phone</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	
</body>
</html>
